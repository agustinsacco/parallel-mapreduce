{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./js/",
      "sourceMap": false,
      "removeComments": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "alwaysStrict": true,
      "allowUnusedLabels": false,
      "allowUnreachableCode": false
    },
    "exclude": [
      "./node_modules/*",
      "./tests/*"
    ]
  }